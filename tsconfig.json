{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es6"
  ]
}